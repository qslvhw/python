class Solution:
    # @param root, a tree node
    # @return an integer
    def maxDepth(self, root):
        if not root: return []
        self.ans = 0
        self.dfs(0, root)
        return self.ans
    
    def dfs(self, cur, root):
        if root:
            self.dfs(cur + 1, root.left)
            self.dfs(cur + 1, root.right)
        else:
            if self.ans < cur: self.ans = cur
            return
